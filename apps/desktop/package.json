{
  "name": "trustclaw",
  "productName": "TrustClaw",
  "version": "2026.1.29",
  "description": "TrustClaw - AI 安全审计网关控制台",
  "main": "main.js",
  "type": "module",
  "author": {
    "name": "OpenClaw",
    "email": "support@openclaw.ai"
  },
  "scripts": {
    "start": "electron .",
    "dev": "node launch.js . --dev",
    "build": "electron-builder --win",
    "build:win": "electron-builder --win nsis",
    "build:mac": "electron-builder --mac",
    "build:mac:dmg": "electron-builder --mac dmg",
    "build:mac:pkg": "electron-builder --mac pkg",
    "build:portable": "electron-builder --win portable",
    "build:nsis": "electron-builder --win nsis",
    "build:all": "electron-builder --win --mac",
    "fix-electron": "powershell -ExecutionPolicy Bypass -File fix-electron.ps1"
  },
  "dependencies": {},
  "devDependencies": {
    "electron": "32.3.3",
    "electron-builder": "^25.1.8"
  },
  "build": {
    "appId": "ai.trustclaw.desktop",
    "productName": "TrustClaw",
    "copyright": "Copyright © 2026 TrustClaw",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "main.js",
      "preload.js",
      "launch.js",
      "renderer/**/*"
    ],
    "extraResources": [
      {
        "from": "default-openclaw",
        "to": "default-openclaw",
        "filter": ["**/*"]
      },
      {
        "from": "../../dist/control-ui",
        "to": "control-ui",
        "filter": ["**/*"]
      },
      {
        "from": "packaged-openclaw.zip",
        "to": "openclaw.zip"
      },
      {
        "from": "../../docs/reference/templates",
        "to": "openclaw/docs/reference/templates",
        "filter": ["**/*"]
      },
      {
        "from": "../../skills",
        "to": "skills",
        "filter": ["**/*.md", "**/*.py", "**/*.sh", "**/*.txt", "**/*.toml"]
      },
      {
        "from": "nodejs/node.exe",
        "to": "nodejs/node.exe"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "renderer/logo.png",
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "build/icon.icns",
      "category": "public.app-category.developer-tools",
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "window": {
        "width": 540,
        "height": 380
      }
    },
    "pkg": {
      "installLocation": "/Applications",
      "allowAnywhere": true,
      "allowCurrentUserHome": true,
      "allowRootDirectory": true
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "TrustClaw",
      "runAfterFinish": true,
      "installerLanguages": ["zh_CN", "en_US"],
      "language": "2052",
      "include": "installer.nsh",
      "differentialPackage": false
    },
    "compression": "maximum",
    "portable": {
      "artifactName": "${productName}-Portable-${version}.${ext}"
    }
  }
}
